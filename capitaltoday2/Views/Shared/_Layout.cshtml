    @RenderSection("scripts", required: false)

    <script>

        $(document).ready(function () {
            $(this).scrollTop(0);
            resizePage();
        });

        function resizePage() {

            $('section').css('min-height', $(window).height());

            $(window).resize(function () {
                if ($(window).width() > 768) {
                    $('section').css('min-height', $(window).height());
                }
            });

        }

    </script>
